<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".result.CheckMyResult">

    <TextView
        android:id="@+id/tvHasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Total"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/fira_sans"
        android:textColor="@color/warnaHuruf"
        android:textSize="7pt"
        android:textStyle="bold"/>
    <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
        android:id="@+id/cpHasil"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/tvHasil"
        app:direction="clockwise"
        app:dotColor="@color/warnaBackgroun"
        app:dotWidth="10dp"
        app:drawDot="true"
        app:enableProgressAnimation="true"
        app:progressBackgroundColor="?colorAccent"
        app:progressBackgroundStrokeWidth="8dp"
        app:progressCap="round"
        app:progressColor="?colorPrimary"
        app:progressStrokeWidth="10dp"
        app:startAngle="270"
        app:textColor="#000000"
        app:textSize="14sp"
        app:fillBackground="false"
        app:gradientType="linear"
        app:gradientEndColor="@color/colorAccent" />
    <TextView
        android:id="@+id/tvPu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="Penalaran UMUM"
        android:layout_below="@+id/cpHasil"
        android:fontFamily="@font/fira_sans"
        android:textColor="@color/warnaHuruf"
        android:textSize="7pt"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvPk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:text="Penalaran Kuantitatif"
        android:layout_below="@+id/tvPu"
        android:fontFamily="@font/fira_sans"
        android:textColor="@color/warnaHuruf"
        android:textSize="7pt"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvPbm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:text="PBM"
        android:layout_below="@+id/tvPk"
        android:fontFamily="@font/fira_sans"
        android:textColor="@color/warnaHuruf"
        android:textSize="7pt"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/tvPpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:text="PPU"
        android:layout_below="@+id/tvPbm"
        android:fontFamily="@font/fira_sans"
        android:textColor="@color/warnaHuruf"
        android:textSize="7pt"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_below="@id/cpHasil">
        <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
            android:id="@+id/cpPu"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:direction="clockwise"
            app:dotColor="@color/warnaBackgroun"
            app:dotWidth="10dp"
            app:drawDot="true"
            app:enableProgressAnimation="true"
            app:fillBackground="false"
            app:gradientEndColor="@color/colorAccent"
            app:gradientType="linear"
            app:progressBackgroundColor="?colorAccent"
            app:progressBackgroundStrokeWidth="8dp"
            app:progressCap="round"
            app:progressColor="?colorPrimary"
            app:progressStrokeWidth="10dp"
            app:startAngle="270"
            app:textColor="@color/warnaHuruf"
            app:textSize="10sp" />
        <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
            android:id="@+id/cpPbm"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            app:direction="clockwise"
            app:dotColor="@color/warnaBackgroun"
            app:dotWidth="10dp"
            app:drawDot="true"
            app:enableProgressAnimation="true"
            app:progressBackgroundColor="?colorAccent"
            app:progressBackgroundStrokeWidth="8dp"
            app:progressCap="round"
            app:progressColor="?colorPrimary"
            app:progressStrokeWidth="10dp"
            app:startAngle="270"
            app:textColor="#000000"
            app:textSize="10sp"
            app:fillBackground="false"
            app:gradientType="linear"
            app:gradientEndColor="@color/colorAccent" />
        <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
            android:id="@+id/cpPk"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            app:direction="clockwise"
            app:dotColor="@color/warnaBackgroun"
            app:dotWidth="10dp"
            app:drawDot="true"
            app:enableProgressAnimation="true"
            app:progressBackgroundColor="?colorAccent"
            app:progressBackgroundStrokeWidth="8dp"
            app:progressCap="round"
            app:progressColor="?colorPrimary"
            app:progressStrokeWidth="10dp"
            app:startAngle="270"
            app:textColor="#000000"
            app:textSize="10sp"
            app:fillBackground="false"
            app:gradientType="linear"
            app:gradientEndColor="@color/colorAccent" />
        <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
            android:id="@+id/cpPpu"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            app:direction="clockwise"
            app:dotColor="@color/warnaBackgroun"
            app:dotWidth="10dp"
            app:drawDot="true"
            app:enableProgressAnimation="true"
            app:progressBackgroundColor="?colorAccent"
            app:progressBackgroundStrokeWidth="8dp"
            app:progressCap="round"
            app:progressColor="?colorPrimary"
            app:progressStrokeWidth="10dp"
            app:startAngle="270"
            app:textColor="#000000"
            app:textSize="10sp"
            app:fillBackground="false"
            app:gradientType="linear"
            app:gradientEndColor="@color/colorAccent" />
    </LinearLayout>


</RelativeLayout>